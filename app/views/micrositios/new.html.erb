<h1>New micrositio</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@micrositio, :html => { :multipart => true }) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :descripcion %>
        <%= f.text_area :descripcion %>

        <%= f.label :imagen %><br />
        <%= f.file_field :photo %>


        <%= f.submit "Sube tu nuevo Lugar", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>



<%= link_to 'Back', micrositios_path %>
